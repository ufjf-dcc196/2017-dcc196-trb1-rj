<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.oak.ifeira.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCadPessoa"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:text="Cadastrar Visitante" />

        <Button
            android:id="@+id/btnCadLivro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cadastrar Livro" />

        <Button
            android:id="@+id/btnCadReserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cadastrar Reserva" />

    </LinearLayout>

    <ListView
        android:id="@+id/lstPessoas"
        android:layout_width="match_parent"
        android:layout_height="550dp" />

</LinearLayout>
